<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="changeTextView"
                android:text="Düzenle"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="onDeleteClick"
                android:text="Sil"
                android:textColor="#FF0000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nameSurnameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:text="İsim Soyisim"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="9dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="title" />

        <TextView
            android:id="@+id/addressAdapterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="9dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="adres, apartman, semt, şehir, ülke" />

        <TextView
            android:id="@+id/cityCountryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="9dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="şehir, ülke" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/addressTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Adres Başlığı (ev, ofis, vb.)"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateAddressTitleText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/NameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*Ad"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateNameText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/SurnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*Soyad"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateSurnameText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/AddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*Adres"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateAddressText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/ApartmentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Apartman"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateApartmentText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/CityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*Şehir"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateCityText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/SemtTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*İlçe"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateSemtText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <TextView
            android:id="@+id/NumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="*Telefon"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:background="@drawable/softgray_background"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUpdateNumberText"
                android:layout_width="357dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:textColorHint="#959595" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveUpdateButton"
                android:layout_width="162dp"
                android:layout_height="56dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/bebas_neue"
                android:onClick="SaveButton"
                android:text="KAYDET"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                app:strokeColor="#424242"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/cancelUpdateButton"
                android:layout_width="162dp"
                android:layout_height="56dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FDFDFD"
                android:fontFamily="@font/bebas_neue"
                android:onClick="CancelButton"
                android:text="VAZGEÇ"
                android:textColor="#000000"
                android:textSize="20sp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>